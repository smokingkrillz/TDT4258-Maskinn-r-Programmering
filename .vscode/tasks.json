{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cl.exe build active file",
      "type": "shell",
      "command": "cl",
      "args": [
        "/Zi",
        "/EHsc",
        "/std:c++20",
        "${file}",
        "/Fe:${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": ["$msCompile"]
    }
  ]
}
